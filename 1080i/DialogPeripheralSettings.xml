			<control type="image">
				<left>715</left>
				<top>110</top>
				<width>1210</width>
				<height>20</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--buttons bg-->
			<control type="image">
				<left>715</left>
				<top>1010</top>
				<width>1210</width>
				<height>70</height>
