			<animation effect="slide" start="0,0" end="-1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			
			<animation effect="slide" start="0,0" end="-35,0" time="300" condition="Window.IsActive(ShutdownMenu)">Conditional</animation>
		
			<!--background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>1080</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--shadow-->
			<control type="image">
				<left>685</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">sidebarshadow.png</texture>
			</control>
			
			<!--right shadow-->
			<control type="image">
				<left>1925</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
