<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol always="true">5</defaultcontrol>

	<controls>
	
		<!--all content-->
		<control type="group">
			<left>385</left>
			<visible>!Window.IsActive(FileBrowser) + !Window.IsActive(ShutdownMenu)</visible>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="1650,0" time="400" tween="quadratic" easing="out">Hidden</animation>
		
			<!--background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>1080</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--shadow-->
			<control type="image">
				<left>685</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">sidebarshadow.png</texture>
			</control>
			
			<!--right shadow-->
			<control type="image">
				<left>1925</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture>sidebarshadow.png</texture>
			</control>
				
			<!--title background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>90</height>
				<texture background="true" colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
		
			<!--title shadow-->
			<control type="image">
				<left>715</left>
				<top>90</top>
				<width>1210</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--buttons bg-->
			<control type="image">
				<left>715</left>
				<top>1010</top>
				<width>1210</width>
				<height>70</height>
				<texture colordiffuse="primary">backgrounds/white.png</texture>
			</control>

			<!--buttons shadow-->
			<control type="image">
				<left>715</left>
				<top>1010</top>
				<width>1210</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--close window button-->
			<control type="button">
				<left>720</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			
			<!--main content-->
			<control type="group">
				<left>170</left>
				<top>0</top>
				
				<!--title-->
				<control type="label" id="2">
					<left>550</left>
					<top>15</top>
					<width>800</width>
					<height>60</height>
					<font>menu.title</font>
					<align>right</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>587</label>
				</control>

				<!--options-->
				<control type="grouplist" id="5">
					<description>control area</description>
					<left>555</left>
					<top>100</top>
					<width>800</width>
					<height>960</height>
					<itemgap>0</itemgap>
					<pagecontrol>6</pagecontrol>
					<onup>9001</onup>
					<ondown>9001</ondown>
					<onleft>9001</onleft>
					<onright>6</onright>
				</control>
				
				<!--scrollbar-->
				<control type="scrollbar" id="6">
					<left>1355</left>
					<top>90</top>
					<height>980</height>
					<onleft>5</onleft>
					<onright>9001</onright>
				</control>
				
			</control>
			
			<!--bottom buttons-->
			<control type="grouplist" id="9001">
				<left>750</left>
				<top>1015</top>
				<width>750</width>
				<height>60</height>
				<align>justify</align>
				<orientation>horizontal</orientation>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				
				<!--ok button-->
				<include name="AnimatedCircleButtonGroup">
					<param name="button-id" value="28" />
					<param name="button-width" value="130" />
					<param name="button-texture" value="yesbutton" />
					<param name="button-label" value="186" />
					<param name="button-onup" value="5" />
					<param name="button-ondown" value="5" />
					<param name="button-onleft" value="27" />
					<param name="button-onright" value="27" />
				</include>
				
				<!--cancel button-->
				<include name="AnimatedCircleButtonGroup">
					<param name="button-id" value="27" />
					<param name="button-width" value="160" />
					<param name="button-texture" value="nobutton" />
					<param name="button-label" value="192" />
					<param name="button-onup" value="5" />
					<param name="button-ondown" value="5" />
					<param name="button-onleft" value="28" />
					<param name="button-onright" value="28" />
				</include>

			</control>
			
		</control>
		
		<!--button-->
		<control type="button" id="7">
			<left>0</left>
			<top>0</top>
		</control>
		
		<!--radio button-->
		<control type="radiobutton" id="8">
			<left>0</left>
			<top>0</top>
		</control>
		
		<!--spin control-->
		<control type="spincontrolex" id="9">
			<left>0</left>
			<top>0</top>
			<reverse>yes</reverse>
		</control>
		
		<!--edit-->
		<control type="edit" id="12">
			<left>0</left>
			<top>0</top>
		</control>
		
		<!--slider-->
		<control type="sliderex" id="13">
			<left>0</left>
			<top>0</top>
		</control>

	</controls>
	
</window>