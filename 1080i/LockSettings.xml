<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol>5</defaultcontrol>

	<controls>
	
		<!--all content-->
		<control type="group">
			<left>-355</left>
			<animation effect="slide" start="1650,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="-1650,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			
			<animation effect="slide" start="0,0" end="-125,0" time="300" condition="Window.IsActive(ShutdownMenu) | Window.IsActive(ContextMenu)">Conditional</animation>
			
			<!--background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>1080</height>
				<texture colordiffuse="tertiary">backgrounds/white.png</texture>
			</control>
			
			<!--left shadow-->
			<control type="image">
				<left>685</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture flipx="true">sidebarshadow.png</texture>
			</control>
			
			<!--right shadow-->
			<control type="image">
				<left>1925</left>
				<top>0</top>
				<width>30</width>
				<height>1080</height>
				<texture>sidebarshadow.png</texture>
			</control>
				
			<!--title background-->
			<control type="image">
				<left>715</left>
				<top>0</top>
				<width>1210</width>
				<height>110</height>
				<texture background="true" colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
			
			<!--title shadow-->
			<control type="image">
				<left>715</left>
				<top>110</top>
				<width>1210</width>
				<height>20</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--buttons bg-->
			<control type="image">
				<left>715</left>
				<top>1010</top>
				<width>1210</width>
				<height>70</height>
				<texture colordiffuse="primary">backgrounds/white.png</texture>
			</control>
	
			<!--buttons shadow-->
			<control type="image">
				<left>715</left>
				<top>1010</top>
				<width>1210</width>
				<height>10</height>
				<texture>homeshadow.png</texture>
				<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
			</control>
			
			<!--close window button-->
			<control type="button">
				<left>720</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>

			<!--main content-->
			<control type="group">
				<left>715</left>
				<top>0</top>

				<!--title-->
				<control type="label" id="2">
					<left>60</left>
					<top>25</top>
					<width>1022</width>
					<height>60</height>
					<font>info.title</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$LOCALIZE[20043]</label>
				</control>

				<!--control area-->
				<control type="grouplist" id="5">
					<left>10</left>
					<top>120</top>
					<width>1190</width>
					<height>615</height>
					<itemgap>10</itemgap>
					<onleft>5</onleft>
					<onright>5</onright>
					<onup>9001</onup>
					<ondown>9001</ondown>
				</control>
				
				<!--button-->
				<control type="button" id="7">
					<left>0</left>
					<top>0</top>
				</control>
				
				<!--radio button-->
				<control type="radiobutton" id="8">
					<left>0</left>
					<top>0</top>
				</control>
				
				<!--spin control-->
				<control type="spincontrolex" id="9">
					<left>0</left>
					<top>0</top>
					<reverse>yes</reverse>
				</control>
				
				<control type="image" id="11">
					<height>1</height>
					<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
				</control>
				
				<!--label-->
				<control type="label" id="14">
					<left>0</left>
					<top>0</top>
					<height>60</height>
					<font>button.bold</font>
					<textcolor>$VAR[Colour.500]</textcolor>
					<textoffsetx>5</textoffsetx>
					<aligny>center</aligny>
				</control>

			</control>
			
			<!--bottom buttons-->
			<control type="grouplist" id="9001">
				<left>955</left>
				<top>1015</top>
				<width>750</width>
				<height>60</height>
				<align>justify</align>
				<orientation>horizontal</orientation>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<onup>5</onup>
				<ondown>20</ondown>
				
				<!--ok button-->
				<include name="AnimatedCircleButtonGroup">
					<param name="button-id" value="28" />
					<param name="button-width" value="130" />
					<param name="button-texture" value="yesbutton" />
					<param name="button-label" value="186" />
					<param name="button-onup" value="5" />
					<param name="button-ondown" value="5" />
					<param name="button-onleft" value="29" />
					<param name="button-onright" value="29" />
				</include>
				
				<!--cancel button-->
				<include name="AnimatedCircleButtonGroup">
					<param name="button-id" value="29" />
					<param name="button-width" value="160" />
					<param name="button-texture" value="nobutton" />
					<param name="button-label" value="222" />
					<param name="button-onup" value="5" />
					<param name="button-ondown" value="5" />
					<param name="button-onleft" value="28" />
					<param name="button-onright" value="28" />
				</include>

			</control>
			
		</control>
		
	</controls>
	
</window>